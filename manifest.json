{
  "manifest_version": 3,
  "name": "GDS FareSnap Tool",
  "version": "2.0.0",
  "description": "Copy any Kayak or Matrix itinerary as Sabre *IA format with 1-click; accurate booking class & segment status.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://kayak.com/*",
        "*://*.kayak.com/*",
        "https://matrix.itasoftware.com/*"
      ],
      "js": [
        "airlines.js",
        "rbd.js",
        "converter.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "kayak-copy@example.com"
    }
  },
  "action": {
    "default_title": "GDS FareSnap Tool",
    "default_popup": "popup.html"
  }
}
